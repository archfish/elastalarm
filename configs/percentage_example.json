{
    "title": "percent",
    "interval": "1440h",
    "index": "logstash-nginx-access-*",
    "paradigm": "percentage",
    "condition": {
        "part": {
            "prefix": {
                "retcode.keyword": "5"
            }
        },
        "whole": {
            "match_all": {}
        },
        "match": {
            "gt": 0.02
        }
    },
    "detail": {
        "requestPaths": {
            "terms": {
                "field": "retcode.keyword"
            },
            "aggs": {
                "hosts": {
                    "terms": {
                        "field": "requestPath.keyword"
                    }
                }
            }
        }
    },
    "alarms": ["stdout", "email"]
}